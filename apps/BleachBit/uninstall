#!/bin/bash

DIRECTORY="$(dirname "$(dirname "$( cd "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )")")"

function error {
  echo -e "\\e[91m$1\\e[39m"
  exit 1
}

"${DIRECTORY}/purge-installed" "$(dirname "$0")" || error "Failed to uninstall BleachBit."

( rm -f /usr/share/applications/org.bleachbit.BleachBit.desktop || sudo rm -f /usr/share/applications/org.bleachbit.BleachBit.desktop ) &>/dev/null

