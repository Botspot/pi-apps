#!/bin/bash

DIRECTORY="$(dirname "$(dirname "$( cd "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )")")"

function error {
  echo -e "\\e[91m$1\\e[39m"
  exit 1
}

rm -f ./etcher*armv7l.deb

wget https://github.com/chunky-milk/raspbian_repository/raw/master/debian/pool/balena-etcher-electron_1.5.116%2B37769efb_armv7l.deb -O ~/etcher-v1.5.116_armv7l.deb || error "Failed to download!"

sudo apt install -y --fix-broken ~/etcher-v1.5.116_armv7l.deb  || error "failed to install deb file!"
rm -f ~/etcher-v1.5.116_armv7l.deb
exit 0
