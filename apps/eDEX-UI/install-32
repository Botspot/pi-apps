#!/bin/bash

version=2.2.8

wget -O $HOME/eDEX-UI.AppImage "https://github.com/GitSquared/edex-ui/releases/download/v${version}/eDEX-UI-Linux-armv7l.AppImage" || error 'Failed to download ${version} appimage!'
chmod +x $HOME/eDEX-UI.AppImage || error 'Failed to make the appimage executable!'

enable_module fuse || exit 1

mkdir -p ~/.local/share/applications
echo "[Desktop Entry]
Name=eDEX-UI
Comment=eDEX-UI sci-fi interface
Exec=$HOME/eDEX-UI.AppImage %U
Terminal=false
Type=Application
Icon=$(dirname "$0")/icon-64.png
StartupWMClass=eDEX-UI
X-AppImage-Version=${version}
Categories=System;
X-Desktop-File-Install-Version=0.23
X-AppImage-Comment=Generated by /tmp/.mount_eDEX-UDQYwse/AppRun" > ~/.local/share/applications/edex-ui.desktop
