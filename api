 \e[107m${blue}â–Œ  ${red}\e[40mâ–—â––â–—â––â–—â––\e[107m${blue}  â–\e[40m\e[97m   â–ˆ    â–ˆ    \e[7mâ–‚\e[27mâ–„â–„â–ˆ â–ˆâ–„â–„\e[7mâ–‚\e[27m â–ˆâ–„â–„\e[7mâ–‚\e[27m â–„â–„â–„\e[7mâ–‚\e[27m
 ${blue}\e[7mâ–‚\e[27m\e[107mâ–ƒâ–ƒâ–ƒâ–ƒâ–ƒâ–ƒâ–ƒâ–ƒâ–ƒâ–ƒ\e[40m\e[7mâ–‚\e[27m\e[40m\e[40m\e[97m                  â–ˆ    â–ˆ
\e[0m\e[0m"
  else
    echo -e "\e[40m\e[97m    ${green}ğŸ­Š${darkgreen}â–…â–…â–…â–…${green}ğŸ¬¿\e[40m\e[97m
 ${blue}ğŸ­ˆâ–‚â–‚${green}â–ˆ${blue}â–‚â–‚â–‚â–‚${green}â–ˆ${blue}â–‚â–‚ğŸ¬½\e[40m\e[97m
 \e[107m${blue}â–Œ  ${red}\e[40mâ–—â––â–—â––â–—â––\e[107m${blue}  â–\e[40m\e[97m   â–ˆâ–€â–€ğŸ­ â–„
 \e[107m${blue}â–Œ  ${red}\e[40mâ–—â––â–—â––â–—â––\e[107m${blue}  â–\e[40m\e[97m   â–ˆâ–„â–„ğŸ­ â–„ ${blue}â–„â–„\e[97m ğŸ­‚â–€â–€â–ˆ â–ˆâ–€â–€ğŸ­ â–ˆâ–€â–€ğŸ­ ğŸ­‚ğŸ¬°ğŸ¬°ğŸ¬°
 \e[107m${blue}â–Œ  ${red}\e[40mâ–—â––â–—â––â–—â––\e[107m${blue}  â–\e[40m\e[97m   â–ˆ    â–ˆ    ğŸ­“â–„â–„â–ˆ â–ˆâ–„â–„ğŸ­ â–ˆâ–„â–„ğŸ­ â–„â–„â–„ğŸ­
 ${blue}ğŸ­“\e[107mğŸ¬­ğŸ¬­ğŸ¬°ğŸ¬°ğŸ¬°ğŸ¬°ğŸ¬°ğŸ¬°ğŸ¬­ğŸ¬­\e[40mğŸ­\e[40m\e[97m                  â–ˆ    â–ˆ
