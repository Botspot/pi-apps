    local version="$(file /usr/lib/arm-linux-gnueabihf/libicudata.so | sed -n 's/.*libicudata.so.//p')"
  else
    local version="65"
  fi
  if (( $(echo "$version >= 66" | bc -l) )); then
    bg_black='\e[48;2;10;10;10m'
    echo -e "${bg_default}    \e[38;2;5;220;75mðŸ­Š\e[38;2;4;150;29mðŸ¬¹ðŸ¬¹ðŸ¬¹\e[38;2;6;188;64mðŸ¬¿${default}                                          ${darkgreen}                ${default}
